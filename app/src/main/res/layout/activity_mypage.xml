<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:theme="@style/ToolbarTheme" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원정보"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/edit_info_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원정보 수정"
            android:layout_marginLeft="10dp"
            android:textColor="?attr/colorPrimary"
            android:layout_gravity="end"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이름"
        android:layout_marginLeft="5dp"
        android:textSize="14sp"
        android:paddingTop="8dp" />

    <EditText
            android:id="@+id/nickname_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="이름입력"
            android:textSize="14sp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:padding="5dp"
            android:background="@null" />
    <Button
        android:id="@+id/save_nickname_button"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text="저장"
        android:textSize="10sp"
        android:layout_marginLeft="5dp"
        android:visibility="gone" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:layout_marginLeft="5dp"
        android:textSize="14sp"
        android:paddingTop="8dp" />
    <EditText
        android:id="@+id/password_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:hint="****"
        android:inputType="textPassword"
        android:textSize="16sp"
        android:paddingTop="4dp"
        android:paddingBottom="16dp" />
    <Button
        android:id="@+id/save_password_button"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text="저장"
        android:layout_marginLeft="5dp"
        android:textSize="10sp"
        android:visibility="gone" />/>
    <!---연락처-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="연락처"
        android:textSize="14sp"
        android:paddingTop="8dp" />

    <EditText
        android:id="@+id/phone_number_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="010-1111-1111"
        android:textSize="16sp"
        android:layout_marginLeft="5dp"
        android:paddingTop="4dp"
        android:paddingBottom="16dp" />

    <Button
        android:id="@+id/save_number_button"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text="저장"
        android:textSize="10sp"
        android:layout_marginLeft="5dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="배송지"
            android:layout_marginLeft="5dp"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/change_address_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="배송지 변경"
            android:textColor="?attr/colorPrimary"
            android:layout_gravity="end"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="수신인"
            android:layout_marginLeft="5dp"
            android:textSize="14sp"
            android:paddingTop="8dp" />

        <EditText
            android:id="@+id/recipient_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="홍길동"
            android:layout_marginLeft="5dp"
            android:textSize="16sp"
            android:paddingTop="4dp"
            android:paddingBottom="16dp" />

        <Button
            android:id="@+id/save_recipient_button"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="저장"
            android:textSize="10sp"
            android:layout_marginLeft="10dp"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="주소"
            android:layout_marginLeft="5dp"
            android:textSize="14sp"
            android:paddingTop="8dp" />

        <EditText
            android:id="@+id/address_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="도로명주소"
            android:textSize="16sp"
            android:paddingTop="4dp"
            android:layout_marginLeft="5dp"
            android:paddingBottom="16dp" />

        <Button
            android:id="@+id/save_address_button"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="저장"
            android:textSize="10sp"
            android:layout_marginLeft="10dp"
            android:visibility="gone" />

    </LinearLayout>
</LinearLayout>